{
  "git": {
    "init": "git clone {url} {workspace}/{name}",
    "receive": "cd {workspace}/{name}; git pull",
    "diff": "git diff .",
    "send": "git push origin master"
  },
  "svn": {
    "init": "svn checkout {url} {workspace}/{name}",
    "receive": "cd {workspace}/{name}; svn up",
    "diff": "svn diff",
    "send": "svn commit -m \"Commited by Repoman\""
  }
}